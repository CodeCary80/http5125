@model School.Models.Student
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 10px;
        }
        .student-name {
            margin-bottom: 20px;
            font-weight: bold;
            font-size: 1.2em;
        }
        .student-details {
            margin-top: 10px;
            color: #C29C6B;
        }
        .property {
            color: black;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div>
    <h2 class="student-name">@Model.StudentFName @Model.StudentLName</h2>
    <div class="student-details">
    
    <div>
        <span class="property">Teacher ID:</span> @Model.StudentID
    </div>
    <div>
        <span class="property">Employee Number:</span> @Model.StudentNumber
    </div>
    <div>
        <span class="property">Enrol Date:</span> @Model.StudentEnrolDate
    </div>
   
</div>
</body>
</html>