@model School.Models.Teacher
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 10px;
        }
        a {
            text-decoration: none;
            color: black;
        }
        a:hover {
            color: #3E84B1;
        }
        .teacher-name {
            margin-bottom: 20px;
            font-weight: bold;
            font-size: 1.2em;
        }
        .teacher-details {
            margin-top: 10px;
            color: #C29C6B;
        }
        .property {
            color: black;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div>
    <h2 class="teacher-name">@Model.TeacherFName @Model.TeacherLName</h2>
    <div class="teacher-details">
    
    <div>
        <span class="property">Teacher ID:</span> @Model.TeacherID
    </div>
    <div>
        <span class="property">Hire Date:</span> @Model.TeacherHireDate
    </div>
    <div>
        <span class="property">Employee Number:</span> @Model.EmployeeNumber
    </div>
    <div>
        <span class="property">Salary: </span> @Model.TeacherSalary
    </div>
</div>
</div>


   

</body>
</html>