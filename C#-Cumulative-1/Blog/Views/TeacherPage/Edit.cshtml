@model School.Models.Teacher

<script>
    function validating() {
        const firstName = document.getElementById("TeacherFname").value.trim(); /*Select the firstName from the name field*/
        const lastName = document.getElementById("TeacherLname").value.trim(); /*Select the lastName from the name field*/

        /*Validate name fields*/
        if (!firstName) {
            alert("Teacher name cannot be empty.");
            return false;
        }
        if(!lastName){
            alert("Teacher name cannot be empty.");
            return false;
        }
        return true; 
    }
</script>

<div id="containershow">
    <nav>
        <a class="navlink" href="/TeacherPage/Show/@Model.TeacherID">Back</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/TeacherPage/Update/@Model.TeacherID" onsubmit="return validating();"> <!--Once click the button,call function validating-->
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFName"  />

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLName"  />

        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">EmployeeNumber:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" required />
        </div>
        <div class="inputrow">
            <label for="TeacherHireDate">TeacherHireDate:</label>
            <input type="date" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate" required />
        </div>
        <div class="inputrow">
            <label for="TeacherSalary">TeacherSalary:</label>
            <input type="text" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" required />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>