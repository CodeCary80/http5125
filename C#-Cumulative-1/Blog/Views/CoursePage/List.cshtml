@model IEnumerable<School.Models.Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 10px;
        }
        a {
            text-decoration: none;
            color: black;
        }
        a:hover {
            color: #3E84B1;
        }
        .course-container {
            margin-bottom: 20px;
        }
        .course-name {
            font-weight: bold;
            font-size: 1.2em;
        }
        .course-details {
            margin-top: 10px;
            color: #C29C6B;
        }
        .property {
            color: black;
            font-weight: bold;
        }
    </style>
</head>
<body>

@foreach (var course in Model)
{
    <div class="course-container">
        <a asp-controller="CoursePage" asp-action="Show" asp-route-id="@course.CourseID" class="course-name">
             @course.CourseName
        </a>

        <div class="course-details">
            
            <div>
                <span class="property">CourseID:</span> @course.CourseID
            </div>
            <div>
                <span class="property">CourseCode:</span> @course.CourseCode
            </div>
            <div>
                <span class="property">Teacher ID:</span> @course.TeacherID
            </div>
            <div>
                <span class="property">Start:</span> @course.CourseStartDate
            </div>
            <div>
                <span class="property">Finish:</span> @course.CourseFinishDate 
            </div>
        </div>
    </div>
}

</body>
</html>